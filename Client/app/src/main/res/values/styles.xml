<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">230sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/white</item>
        <item name="errorIconTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="cursorErrorColor">@color/white</item>
    </style>
    <dimen name="mtrl_textinput_box_stroke_width_default">2sp</dimen>
    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/opensansregular</item>
        <item name="android:outlineAmbientShadowColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:outlineSpotShadowColor">@color/white</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="singleLine">true</item>
    </style>
    <style name="SwitchButton">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background"> @drawable/transparent_background</item>
    </style>
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/green</item>
    </style>
    
    <style name="roundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayoutStyleForQuestion" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">230sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="boxStrokeColor">@color/edittext_border_color</item>
        <item name="hintTextColor">@color/focused</item>
        <item name="cursorErrorColor">@color/black</item>
    </style>

    <style name="TextInputEditTextStyleForQuestion" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>




</resources>