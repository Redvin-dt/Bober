<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".groups.GroupChaptersFragment">

    <ListView
        android:id="@+id/group_chapters_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10sp"
        android:paddingHorizontal="5sp"
        android:paddingVertical="15sp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_chapter_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/chapter_list_item" />

    <Button
            android:id="@+id/new_chapter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_chapter"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/lavanda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintVertical_bias="0.98"
    />

</androidx.constraintlayout.widget.ConstraintLayout>