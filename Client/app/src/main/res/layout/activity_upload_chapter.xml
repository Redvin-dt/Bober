<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".chapters.ChapterUploadActivity">

    <Button
            android:id="@+id/choose_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose"
            android:textSize="18sp"
            app:backgroundTint="@color/lavanda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:layout_constraintHorizontal_bias="0.2"
    />

    <Button
            android:id="@+id/upload_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload"
            android:textSize="18sp"
            app:backgroundTint="@color/lavanda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:layout_constraintHorizontal_bias="0.8"
    />

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/preview"
            android:layout_width="350sp"
            android:layout_height="0sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/choose_file_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="65sp"
            android:background="@drawable/bordered_image"
    />
    <ImageButton
            android:id="@+id/help_button"
            android:src="@drawable/question_mark"
            android:layout_width="45sp"
            android:layout_height="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/preview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preview"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"
            android:background="@drawable/roundcorner"
            />

    <ImageButton
            android:id="@+id/add_test"
            android:src="@drawable/baseline_add_24"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:layout_constraintStart_toEndOf="@id/choose_file_button"
            app:layout_constraintEnd_toStartOf="@id/upload_file_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preview"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/lavanda"
    />

</androidx.constraintlayout.widget.ConstraintLayout>